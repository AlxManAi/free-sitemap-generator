}

QCheckBox::indicator:disabled {
    border: 1px solid #2d2d2d;
    background-color: #252525;
}

QCheckBox:disabled {
    color: #808080;
}

/* Combo Box - единый стиль с синей обводкой */
QComboBox {
    background-color: #2d2d2d;
    border: 1px solid #0078d4;
    border-radius: 4px;
    padding: 4px 8px;
    color: #f0f0f0;
    min-height: 24px;
}

QComboBox:hover {
    border: 1px solid #106ebe;
    box-shadow: 0 0 4px rgba(0, 120, 212, 0.3);
}

QComboBox:focus {
    border: 1px solid #0078d4;
    box-shadow: 0 0 6px rgba(0, 120, 212, 0.4);
}

QComboBox::drop-down {
    border: none;
    width: 20px;
    background-color: transparent;
}

